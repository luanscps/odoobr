# ============================================
# Odoo 18.0 Brasil - NFe Environment Variables
# ============================================
# Copy this file to .env and fill with your values
# Network: macvlan-dhcp (must exist in your CasaOS/Portainer)

# ============================================
# CONTAINER IP ADDRESSES
# ============================================
# Must be within 10.41.10.0/24 subnet (or your configured subnet)
# Avoid conflicts with existing services

POSTGRES_IP=10.41.10.147
ODOO_IP=10.41.10.148
ADMINER_IP=10.41.10.149

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL database name
POSTGRES_DB=odoo

# PostgreSQL username
POSTGRES_USER=odoo

# PostgreSQL password (CHANGE THIS!)
POSTGRES_PASSWORD=odoo_secure_password_change_me_123456

# PostgreSQL connection parameters for Odoo
ODOO_DB_HOST=odoobr-postgres
ODOO_DB_PORT=5432
ODOO_DB_NAME=odoo

# ============================================
# ODOO CONFIGURATION
# ============================================

# Odoo admin/superuser password (CHANGE THIS!)
ODOO_ADMIN_PASSWORD=admin_secure_password_change_me_123456

# Odoo web interface port
ODOO_PORT=8069

# Odoo longpolling port (for real-time features)
ODOO_LONGPOLL_PORT=8072

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# ============================================
# BRAZILIAN LOCALIZATION - NFe CONFIGURATION
# ============================================

# SEFAZ Environment: homolog (testing) or prod (production)
BRASIL_AMBIENTE=homolog

# Enable NFSe (Nota Fiscal de Serviço Eletrônica)
BRASIL_NFSE_ENABLED=True

# ============================================
# ADMINER CONFIGURATION (optional database manager)
# ============================================

# Adminer web port (for database management UI)
ADMINER_PORT=9999

# ============================================
# DATA DIRECTORIES
# ============================================
# These directories are created automatically
# Base path: /DATA/AppData/odoobr/
#
# - postgres/          : PostgreSQL data and backups
# - odoo/              : Odoo filestore and attachments
# - config/            : Odoo configuration files
# - addons/            : OCA modules and custom addons
# - logs/              : Odoo application logs
# - filestore/         : Odoo filestore (documents)
# - sessions/          : Odoo session data
# - certificates/      : Digital certificates (A1)

# ============================================
# BACKUP CONFIGURATION (optional)
# ============================================

# Enable automatic backups
BACKUP_ENABLED=False

# Backup frequency in hours (0 = disabled)
BACKUP_FREQUENCY=24

# Keep backups for N days
BACKUP_RETENTION=7

# ============================================
# EMAIL CONFIGURATION (optional)
# ============================================

# SMTP server for outgoing email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app
SMTP_USE_TLS=True

# From email address
FROM_EMAIL=noreply@seudominio.com.br

# ============================================
# SECURITY (optional but recommended)
# ============================================

# Enable HTTPS (requires reverse proxy like Nginx/Caddy)
ENABLE_HTTPS=False

# Session timeout in hours
SESSION_TIMEOUT=24

# ============================================
# INSTRUMENTATION (optional)
# ============================================

# Enable prometheus metrics
PROMETHEUS_ENABLED=False

# Enable debug toolbar
DEBUG_TOOLBAR=False
