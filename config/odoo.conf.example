[options]
# Odoo 18.0 Brasil - Configuration File
# Copy to odoo.conf and customize for your environment

; Database connection
admin_passwd = admin_secure_password_change_me
db_host = odoobr-postgres
db_port = 5432
db_user = odoo
db_password = odoo_secure_password_change_me

; Database name filter
db_filter = ^.*$

; Web Interface
listen = 0.0.0.0
xmlrpc_port = 8069
longpolling_port = 8072

; Data files
data_dir = /var/lib/odoo/.local/share/Odoo

; Addons path
addons_path = /opt/odoo/addons,/mnt/extra-addons

; Logging
log_level = info
log_file = /var/log/odoo/odoo.log
logrotate = 100

; Server settings
max_cron_threads = 2
workers = 3
worker_class = gevent
worker_connections = 200
timeout = 120

; Memory
limit_memory_soft = 1677721600  ; 1.6 GB
limit_memory_hard = 2097152000  ; 2 GB
limit_time_cpu = 600
limit_time_real = 1200

; Email
smtp_server = smtp.gmail.com
smtp_port = 587
smtp_ssl = False
smtp_user = seu_email@gmail.com
smtp_password = sua_senha_app

; Sessions
session_gc_interval = 7200

; Security
http_auth_timeout = 1209600  ; 14 days
http_auth_user = admin
http_auth_password = admin

; File upload
max_upload = 0  ; 0 = unlimited

; Local timezone
tz = America/Sao_Paulo

; Language
lang = pt_BR

; Brazilian Localization
add_modules = base,web

; Enable modules
load = base,web

; Database updates (run once on startup)
; Uncomment to auto-update modules at startup
; --update=base

; Development mode (disable in production!)
; dev_mode = False

; Offline
; offline = False
